<!DOCTYPE html>
<html>
<head>
  <title>A98lumens</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag "jquery-1.8.1.js" %>
  <%= javascript_include_tag "flot/jquery.flot.js" %>
  <%= javascript_include_tag "rails.js" %>
  <%= javascript_include_tag "flot-test.js" %>
  <%= javascript_include_tag "updateHTML.js" %>
</head>
<body>
    <%= render 'layouts/header' %>
    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
      <%= render 'layouts/footer' %>
    </div>

    <script type="text/javascript">
      <% if alert.nil? %>
        $(".alert").hide()
      <% else %>
        $(".alert").show()
      <% end %>
    </script>
</body>
</html>
